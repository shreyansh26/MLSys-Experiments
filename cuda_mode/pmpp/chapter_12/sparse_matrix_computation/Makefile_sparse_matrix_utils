GCC        	= /usr/bin/g++
NVCC 		= /usr/bin/nvcc
LD_FLAGS    = -lcudart -L/usr/lib64
EXE	        = sparse_matrix_utils
OBJ	        = sparse_matrix_utils.o
UTILS 		= cuda_utils
UTILS_OBJ 	= cuda_utils.o

default: $(EXE)

$(UTILS_OBJ): cuda_utils.cu
	$(NVCC) -c -o $@ $<

$(OBJ): sparse_matrix_utils.cpp
	$(GCC) -c -o $@ $<

$(EXE): $(UTILS_OBJ) $(OBJ)
	$(GCC) $^ -o $@ $(LD_FLAGS)

clean:
	rm -rf *.o $(EXE)
